<div class="container">
  <div class="row">
    <div class="col-lg-10 mt-5 mx-auto">

      <%= render  "shared/errors", variable: @question %>

      <%= form_for @question, remote: true do |f| %>
      <div class="form-group">
        <%= f.label :title, "Título"%>
        <%= f.text_field :title, class:"form-control", placeholder:"Ingresa acá tu pregunta" %>
      </div> 
      <div class="form-group">
        <%= f.label :content, "Descripción" %>
        <%= f.text_area :content, rows: 4, class:"form-control", placeholder:"Agrega acá una descripción detallada" %>
      </div> 
      <%= f.submit "Preguntar", class:"btn btn-dark float-right" %>

      <% end %>

      <%= link_to  "Listado de preguntas", questions_path, class:"btn btn-outline-dark" %>

    </div>
  </div>
</div>