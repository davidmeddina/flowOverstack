<div class="container">
  <div class="row">
    <div class="col-lg-10 mt-3 mx-auto">
      <h1>Preguntas</h1>
      <div><%= link_to  "Crear pregunta", new_question_path, class:"btn btn-dark float-right" %></div>
      <div class="questions mt-5 d-flex justify-content-center">
        <table class="table borderless">
          <tbody>
            <% @questions.each do |question| %>
            <tr>
              <th style="border: none"></th>
              <td class="text-center"><span class="counters">1</span><span class="d-block">Votos</span></td>
              <td class="text-center"><span class="counters">1</span><span class="d-block">Respuestas</span></td>
              <td class="">
                <%= link_to question.title, question_path(question), class:"q-title d-block" %>
                <span class="muted">Por <%= question.user.email  %> hace <%= time_ago_in_words(question.created_at) %></span>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
