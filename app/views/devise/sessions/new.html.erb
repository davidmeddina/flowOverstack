<div class="container">
  <div class="row">
    <div class="col-lg-10 mt-5 mx-auto">
      <div class="sign-form">

        <h2 align="center">Ingresar</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-75 mx-auto", placeholder:"Email" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, autocomplete: "current-password", class:"form-control w-75 mx-auto", placeholder:"ContraseÃ±a" %>
        </div>

        <% if devise_mapping.rememberable? %>
        <div class="form-group mx-auto w-75">
          <%= f.check_box :remember_me,  class:"mx-auto" %>
          <%= f.label :remember_me, 'Recordarme', class:"mx-auto" %>
        </div>
        <% end %>

        <div class="form-group mx-auto w-75 text-center">
          <%= f.submit "Ingresar", class:'btn btn-dark' %>
        </div>
        <% end %>

        <!-- <hr class="w-75 mx-auto"> -->
        <div class="w-75 mx-auto text-center">
          <%- if devise_mapping.omniauthable? %>
          <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Ingresar con #{OmniAuth::Utils.camelize(provider)}", 
                                omniauth_authorize_path(resource_name, provider), class:'btn btn-outline-dark' %><br />
          <% end %>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>