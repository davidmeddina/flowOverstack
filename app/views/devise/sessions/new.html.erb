<div class="container">
  <div class="row">
    <div class="col-lg-10 mt-5 mx-auto">

      <h2 align="center">Ingresar</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control w-50 mx-auto", placeholder:"Email" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control w-50 mx-auto", placeholder:"ContraseÃ±a" %>
      </div>

      <% if devise_mapping.rememberable? %>
      <div class="form-group mx-auto w-50">
        <%= f.check_box :remember_me,  class:"mx-auto" %>
        <%= f.label :remember_me, 'Recordarme', class:"mx-auto" %>
      </div>
      <% end %>

      <div class="form-group mx-auto w-50">
        <%= f.submit "Ingresar" %>
      </div>
      <% end %>
      
      <%#= render "devise/shared/links", class:"" %>

    </div>
  </div>
</div>